
@{
    ViewBag.Title = "IntroduceEmployer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("Menu", "HomeEmployer")
<div class="w3l-index-block1">
    <div class="content py-5">
        <div class="container">
            <div class="row align-items-center py-md-5 py-3">
                <div class="col-md-5 content-left pt-md-0 pt-5">
                    <div class="card bg-secondary shadow border-0 mb-0">
                        <div class="card-header bg-white pb-5">
                            <div class="text-muted text-center mb-3">
                                <h4>Đăng nhập đăng bài và tìm hồ sơ</h4>
                            </div>
                            <div class="btn-wrapper text-center">
                                <a href="@Url.Action("ResEmployer","Account")" class="btn btn-neutral btn-icon mt-2">
                                    <span class="btn-inner--icon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <span class="btn-inner--text">Đăng ký</span>
                                </a>
                                <a href="javascript:;" class="btn btn-neutral btn-icon mt-2">
                                    <span class="btn-inner--icon">
                                        <i class="fa fa-key"></i>
                                    </span>
                                    <span class="btn-inner--text">Quên mật khẩu</span>
                                </a>
                            </div>
                        </div>
                        <div class="card-body px-lg-5 py-lg-5 bg-primary" style="height: 350px">
                            <script>
                                function valiloginemployer() {
                                    var employer_email = document.getElementById("employer_email").value;
                                    var employer_pass = document.getElementById("employer_pass").value;
                                    if (employer_email == '' && employer_pass == '') {
                                        document.getElementById('testemployerlogin').innerHTML = '<div class = "alert alert-danger text-danger"><i class="fas fa-exclamation-circle">&nbsp;</i>Vui lòng nhập email và mật khẩu.</div>';
                                    }
                                    else if (employer_email = '') {
                                        document.getElementById('testemployerlogin').innerHTML = '<div class = "alert alert-dange text-dangerr"><i class="fas fa-exclamation-circle">&nbsp;</i>Vui lòng nhập email.</div>';
                                    } else if (employer_pass == '') {
                                        document.getElementById('testemployerlogin').innerHTML = '<div class = "alert alert-danger text-danger"><i class="fas fa-exclamation-circle">&nbsp;</i>Vui lòng mật khẩu.</div>';
                                    } else {
                                        return true;
                                    }
                                    return false;
                                }
                            </script>
                            <form role="form" action="@Url.Action("LoginEmployer","Account")" method="post" onsubmit="return valiloginemployer()">
                                <div class="form-group mb-3">
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                        </div>
                                        <input class="form-control" placeholder="Email" type="email" name="employer_email" id="employer_email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                        </div>
                                        <input class="form-control" placeholder="Password" type="password" name="employer_pass" id="employer_pass">
                                    </div>
                                </div>
                                <div class="custom-control custom-control-alternative custom-checkbox">
                                    <input class="custom-control-input" id=" customCheckLogin" type="checkbox">
                                    <label class="custom-control-label" for=" customCheckLogin">
                                        <span class="text-white">Nhớ mật khẩu</span>
                                    </label>
                                </div>
                                <div class="mt-2">@Html.Raw(Session["NotLoginEmployer"])</div>
                                <div id="testemployerlogin" class="mt-2"></div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-danger">Đăng nhập</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-7 content-photo mt-md-0">
                    <img src="~/Content/Layout/images/employer.jpg" class="img-fluid mt-3" alt="main image">
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>

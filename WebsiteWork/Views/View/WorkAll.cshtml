@using WebsiteWork.Models;
@model List<Work>
@{
    ViewBag.Title = "WorkPro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
@Html.Action("Menu", "Home")
<div class="w3l-index-block1" ng-app="">
    <div class="py-5">
        <div class="">
            <div class="row align-items-center py-3">
                <nav class="sticky-top bg-white w-100" style="z-index: 100000 !important; height: 70px;">
                    <div class="">
                        <div class="" id="main_nav">
                            @Html.Action("SearchWorkAll", "Search")
                        </div> <!-- navbar-collapse.// -->
                    </div><!-- container //  -->
                </nav>
                <section class="container">
                    <div class="">
                        <div class="w3l-index-block1">
                            <div class="">
                                <div class="section-content">
                                    <div class="row align-items-center py-md-5 py-3">
                                        <div class="row justify-content-center">
                                            <div class="col-lg-3">
                                                <div class="card shadow">
                                                    <div class="list-group">
                                                        <button type="button" class="list-group-item list-group-item-action active">
                                                            Tìm kiếm chủ đề chính
                                                        </button>
                                                        <a type="button" class="list-group-item list-group-item-action" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#ResDiv" href="@Url.Action("AllWork","Search")">Tất cả</a>
                                                        <button type="button" class="list-group-item list-group-item-action">Việc làm gấp</button>
                                                        <button type="button" class="list-group-item list-group-item-action">Việc làm hot</button>
                                                        <button type="button" class="list-group-item list-group-item-action">Việc làm mới nhất</button>
                                                        <button type="button" class="list-group-item list-group-item-action active">
                                                            Tìm kiếm nhanh
                                                        </button>
                                                        <a data-ajax="true" data-ajax-method="GET" data-ajax-update="#ResDiv" data-ajax-mode="replace" href="@Url.Action("PartTimeWork","Searchx")" type="button" class="list-group-item list-group-item-action">Việc làm bán thời gian</a>
                                                        <button type="button" class="list-group-item list-group-item-action">Việc làm toàn thời gian</button>
                                                        <button type="button" class="list-group-item list-group-item-action">Việc làm thực tập sinh</button>
                                                        <button type="button" class="list-group-item list-group-item-action active">
                                                            Xu hướng
                                                        </button>
                                                        <button type="button" class="list-group-item list-group-item-action">Việc làm lương cao</button>
                                                        <button type="button" class="list-group-item list-group-item-action">Việc làm hấp dẫn</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-9">
                                                <div class="card shadow">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="alert alert-danger" style="height: 50px; background-color: white; border: 0px solid black">
                                                                    <div style="float: left" class="text-primary">
                                                                        <a data-ajax="true" data-ajax-method="GET" data-ajax-update="#ResDiv" data-ajax-mode="replace" href="@Url.Action("MonopolyWork","Search")"><i class="fab fa-hotjar text-danger">&nbsp;</i>Độc quyền</a> |
                                                                        <a data-ajax="true" data-ajax-method="GET" data-ajax-update="#ResDiv" data-ajax-mode="replace" href="@Url.Action("ViewWork","Search")"><i class="fa fa-eye text-danger">&nbsp;</i>Top lượt xem</a> |
                                                                        <a data-ajax="true" data-ajax-method="GET" data-ajax-update="#ResDiv" data-ajax-mode="replace" href="@Url.Action("LikeWork","Search")"><i class="fa fa-heart text-danger">&nbsp;</i>Top lượt thích</a>
                                                                    </div>
                                                                    <div style="float: right" class="text-primary">
                                                                        <i class="fas fa-list-alt">
                                                                            &nbsp;
                                                                        </i><i class="fas fa-bars"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="tab-content" id="myTabContent">
                                                            <style>
                                                                .hover:hover {
                                                                    background-color: var(--light-bg-color);
                                                                }
                                                            </style>
                                                            <div class="row" id="ResDiv">
                                                                @foreach (var item in Model)
                                                                {
                                                                    <div class="col-md-6" style="font-size: 15px; padding: 5px; margin-top: -2%">
                                                                        <div class="card hover mb-3">
                                                                            <div class="row no-gutters">
                                                                                <div class="col-md-4">
                                                                                    <a href="@Url.Action("DetailsView","View", new {id = item.work_id })">
                                                                                        <img src="~/Images/Employer/@item.Employer.employer_logo" class=" mt-3" alt="..." style="width: 100%; height: 80px; padding: 5px">
                                                                                        <br />
                                                                                        <br />
                                                                                    </a>
                                                                                </div>
                                                                                <div class="col-md-8">
                                                                                    <div class="card-body">
                                                                                        <a href="@Url.Action("DetailsView","View", new {id = item.work_id })" style="height: 40px;font-size: 13px"><b>@(item.work_name.Length < 50 ? item.work_name : item.work_name.Substring(0, 50) + "...")</b></a>
                                                                                        <br />
                                                                                        <a href="#"><p style="font-size: 12px">@item.Employer.employer_name</p></a>
                                                                                        <div style="font-size: 13px">
                                                                                            <div class="float-left"><i class="fa fa-dollar text-danger font-weight-bold">&nbsp;</i>@item.work_pricemin-@item.work_pricemax @item.work_symbol</div>
                                                                                            <div class="float-right"><i class="fa fa-map-marker-alt text-primary font-weight-bold">&nbsp;</i>@item.Province.province_name</div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
<!-- index-block1 -->

@using WebsiteWork.Models
@model List<Employer>
@{
    ViewBag.Title = "AllEmployer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("Menu","Home")
<section class="section section-lg">
    <div class="col-lg-12" style="background-image: url('../../Images/Employer/cover_trang_chu.jpg');background-repeat: no-repeat; background-size: 100%; width: 100%; height: 200px">
        <div>
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-lg-2 col-sm-6" style="padding: 0px">
                </div>
                <div class="col-lg-7 col-sm-6" style="padding: 0px">
                    <div class="form-group">
                        <div class="input-group input-group-alternative mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ni ni-zoom-split-in"></i></span>
                            </div>
                            <input class="form-control" placeholder="Nhập tên công ty" type="text" style="border-radius: 0px 0px 0px 0px; height: 40px">
                        </div>
                    </div>
                </div>
                <div class="col-lg-1 col-sm-6" style="padding: 0px">
                    <button class="btn btn-danger w-100" style="border-radius: 0px 5px 5px 0px; height: 40px">Tìm kiếm</button>
                </div>
                <div class="col-lg-2 col-sm-6" style="padding: 0px">
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row row-grid justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="text-center">
                    <h4 class="display-4 mb-5 mt-5">Các nhà tuyển dụng nổi bậc</h4>
                    <div class="row justify-content-center">
                        @foreach (var item in Model.Where(n => n.employer_activate == true && n.employer_option == true).OrderByDescending(n => n.employer_version).OrderByDescending(n => n.employer_datecreated).ToList())
                        {
                            <div class="col-lg-2 col-4">
                                <a href="@Url.Action("DetailsEmployer","View", new { id = item.employer_id })" target="_blank" data-toggle="tooltip" data-original-title="Bootstrap 4 - Most popular front-end component library">
                                    <img src="/Images/Employer/@item.employer_logo" class="img-fluid" style="width: 100%; height: 80px">
                                </a>
                            </div>
                        }
                        <button type="button" class="btn btn-primary mt-5">Tuyển dụng ngay</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

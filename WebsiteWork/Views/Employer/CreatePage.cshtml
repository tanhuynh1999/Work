@using WebsiteWork.Models;
@model Employer
@{
    Employer employer = (Employer)Session["employer"];
    ViewBag.Title = "CreatePage";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}
<style>
    .ck {
        height: 300px
    }
</style>
<script>
    function valicreateemployer() {

    }
</script>
@using (Html.BeginForm("CreatePage", "Employer", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.employer_id)
    <div class="row">
        <div class="col-lg-12">
            <img src="https://cdn.itviec.com/photos/40792/processed_headline_photo/lg-development-center-vietnam-tuyen-dung-viec-lam-IT-headline_photo-1225369.JPG?He6mLuRivgoA8J3uhAvTcptL" style="height: 500px; width: 100%" />
        </div>
        <div class="col-lg-3">
            <center style="margin-top: 10px">
                <img src="~/Images/Employer/cong-ty-co-phan-vien-thong-fpt-5d5f5980e317c.jpg" alt="Raised circle image" class="img-fluid rounded-circle shadow-lg" style="width: 200px; height: 200px; border-radius: 50%">
            </center>
        </div>
        <div class="col-lg-9">
            <br />
            <div class="alert alert-danger"><i class="fa fa-bell">&nbsp;</i>Vui lòng nhập đầy đủ thông tin hoặc sửa thông tin cá nhân cho ứng viên có thể thấy.</div>
            <h3 style="font-size: 30px">
                <input type="text" placeholder="Tên công ty (vd: AllWork1s)" value="@employer.employer_company" style="border: 1px dashed black; width: 100%; background-color: #f3f3f3" name="employer_company" />
            </h3>
            <ul>
                <li>
                    <i class="fa fa-map-marker-alt">&nbsp;</i>Trụ sở chính:
                    <select style="border: 1px dashed black;background-color: #f3f3f3; margin-top: 4px" name="employer_province">
                        <option value="">--Tỉnh Thành--</option>
                        <option value="Bình Dương">Bình Dương</option>
                        <option value="TP.Hồ Chí Minh">TP.Hồ Chí Minh</option>
                        <option value="Hà nội">Hà Nội</option>
                    </select>
                </li>
                <li style="margin-top: 4px"><i class="fa fa-users"></i>&nbsp;Số thành viên: <input type="text" placeholder="Số thành viên" value="2" style="border: 1px dashed black; width: 200px; background-color: #f3f3f3" /></li>
                
                <hr />
                <li>Sản phẩm: <input type="text" placeholder="Sản phẩm chính" value="@employer.employer_specialized" style="border: 1px dashed black; width: 200px; background-color: #f3f3f3" /></li>
                <li style="margin-top: 4px">Đang tuyển: <input type="text" placeholder="Cần tuyển" value="Back end,..." style="border: 1px dashed black; width: 200px; background-color: #f3f3f3" name="employer_recruitment" /></li>
                <hr />
                <li style="margin-top: 4px">Link Facebook: <input type="text" placeholder="Link facebook" value="" style="border: 1px dashed black; width: 200px; background-color: #f3f3f3" name="employer_linkfc" /></li>
                <li style="margin-top: 4px">SĐT: <input type="text" placeholder="Số điện thoại" value="@employer.employer_phone" style="border: 1px dashed black; width: 200px; background-color: #f3f3f3" name="employer_phone"/></li>
            </ul>
        </div>
        <div class="col-lg-12">
            <div class="card shadow" style="margin-top: 50px">
                <div class="card-body" style="padding: 20px">
                    <h1 style="font-size: 30px">Giới thiệu</h1>
                    <textarea id="editor" style="width: 100%; height: 300px" name="employer_introduce">Nêu giới thiệu sơ lượt về công ty.</textarea>
                    <hr />
                    <h1 style="font-size: 30px">Tại sao bạn yêu thích công ty</h1>
                    <textarea id="editorlove" style="width: 100%; height: 300px" name="employer_favourite">Nêu nội dung mà bạn nghĩ ứng viên sẽ thích.</textarea>
                    
                </div>
            </div>
            <div class="alert alert-danger">
                <i class="fa fa-bell">&nbsp;</i>Sau khi lưu, thông tin của bạn sẽ được chúng tôi chú ý và duyệt. Nếu nội dung đúng và phù hợp, trang cá nhân của bạn sẽ được hiển thị ngoài trang chủ. Sau khi lưu các tính năng của hệ thống sẽ được mở và bạn có thể sử dụng.
            </div>
            <button type="submit" class=" btn-l btn-7" style="width: 100%">LƯU THAY ĐỔI</button>
        </div>
    </div>

}
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>
<script>
    ClassicEditor
        .create(document.querySelector('#editorlove'))
        .catch(error => {
            console.error(error);
        });
</script>
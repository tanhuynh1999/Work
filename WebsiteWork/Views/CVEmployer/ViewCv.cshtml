@using WebsiteWork.Models
@model Submit
@{
    ViewBag.Title = "ViewCv";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
    DataWorkEntities db = new DataWorkEntities();
    Employer employer = (Employer)Session["employer"];
}

<link href="~/Content/UI/BK/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/fontawesome-free-5.14.0-web/css/all.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/textext.plugin.autocomplete.js"></script>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Library</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-9">
        <div class="card">
            <div class="row" style="padding: 20px">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12" style=" padding: 30px">
                            <div class="row">
                                <div class="col-lg-4">
                                    <img src="~/Images/Cv/32644928_2062295167425734_7686714948314988544_o.jpg" class="container" style="height: 250px;" />
                                </div>
                                <div class="col-lg-8">
                                    <a href="#"><span class="hoverhe"><i class="fa fa-heart text-danger" style="float: right; font-size: 30px"></i></span></a>
                                    <h2>@Model.Cv.cv_fullname</h2>
                                    <p>Vị trí ứng tuyển: @Model.Cv.cv_location</p>
                                    <ul>
                                        <li><b>Ngày sinh:&nbsp;</b>@Model.Cv.cv_bird.Value.Day/@Model.Cv.cv_bird.Value.Month/@Model.Cv.cv_bird.Value.Year</li>
                                        <li>
                                            <b>Giới tính:&nbsp;</b>
                                            Nam
                                        </li>
                                        <li><b>Điện thoại:&nbsp;</b>@Model.Cv.cv_phone </li>
                                        <li class="mt-1"><b>Email:</b> &nbsp;@Model.Cv.cv_email</li>
                                        <li><b>Địa chỉ:</b> &nbsp;@Model.Cv.cv_address</li>
                                        <li><b>Link facebook: </b><a href="@Model.Cv.cv_linkfc">@Model.Cv.cv_linkfc</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div style="padding: 30px">
                                <h4 style="border-bottom: 1px solid #172b4d" class="mt-3">Mục tiêu nghề nghiệp</h4>
                                <p class="mt-3">
                                    @Model.Cv.cv_target
                                </p>
                            </div>
                            <div style="padding: 30px">
                                <h4 style="border-bottom: 1px solid #172b4d" class="mt-3">Học vấn</h4>
                                <p class="mt-3">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            @Model.Cv.cv_datebegineducation.Value.Day/@Model.Cv.cv_datebegineducation.Value.Month/@Model.Cv.cv_datebegineducation.Value.Year -
                                            @Model.Cv.cv_dateendeducation.Value.Day/@Model.Cv.cv_dateendeducation.Value.Month/@Model.Cv.cv_dateendeducation.Value.Year
                                        </div>
                                        <div class="col-lg-8">
                                            <b>@Model.Cv.cv_schools</b>
                                            <div>Chuyên nghành: @Model.Cv.cv_industrystory</div>
                                            <div>
                                                Tốt nghiệp loại <span class="text-danger">Giỏi</span> - Điểm trung bình <span class="text-danger">@Model.Cv.cv_point</span>
                                            </div>
                                            @Model.Cv.cv_contenteducation
                                        </div>
                                    </div>
                                </p>
                                <br />
                            </div>
                            <div style="padding: 30px">
                                <h4 style="border-bottom: 1px solid #172b4d" class="mt-3">Kinh nghiệm việc làm</h4>
                                <p class="mt-3">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            @Model.Cv.cv_datebeginexp.Value.Day/@Model.Cv.cv_datebeginexp.Value.Month/@Model.Cv.cv_datebeginexp.Value.Year -
                                            @Model.Cv.cv_dateendexp.Value.Day/@Model.Cv.cv_dateendexp.Value.Month/@Model.Cv.cv_dateendexp.Value.Year
                                        </div>
                                        <div class="col-lg-8">
                                            <b>Công ty AllWorl1s</b>
                                            <div>@Model.Cv.cv_roleexp</div>
                                            @Model.Cv.cv_contentexp
                                        </div>

                                        <div class="col-lg-4">
                                            @Model.Cv.cv_datebeginexptwo.Value.Day/@Model.Cv.cv_datebeginexptwo.Value.Month/@Model.Cv.cv_datebeginexptwo.Value.Year -
                                            @Model.Cv.cv_dateendexptwo.Value.Day/@Model.Cv.cv_dateendexptwo.Value.Month/@Model.Cv.cv_dateendexptwo.Value.Year
                                        </div>
                                        <div class="col-lg-8">
                                            <b>Công ty phần mềm fpt</b>
                                            <div>@Model.Cv.cv_roleexptwo</div>
                                            @Model.Cv.cv_contentexptwo
                                        </div>
                                    </div>
                                </p>
                                <br />
                            </div>
                            <div style="padding: 30px">
                                <h4 style="border-bottom: 1px solid #172b4d" class="mt-3">Hoạt động</h4>
                                <div class="col-lg-4">
                                    @Model.Cv.cv_datebeginactivate.Value.Day/@Model.Cv.cv_datebeginactivate.Value.Month/@Model.Cv.cv_datebeginactivate.Value.Year -
                                    @Model.Cv.cv_dateendactivate.Value.Day/@Model.Cv.cv_dateendactivate.Value.Month/@Model.Cv.cv_dateendactivate.Value.Year
                                </div>
                                <div class="col-lg-8">
                                    <b>Làm tình nguyện viên</b>
                                    @Model.Cv.cv_contentactivate
                                </div>
                                <br />
                            </div>
                            <div style="padding: 30px">
                                <h4 style="border-bottom: 1px solid #172b4d" class="mt-3">Chứng chỉ</h4>
                                <div class="row mt-3">
                                    <div class="col-lg-4">
                                        <span class="text-danger">@Model.Cv.cv_yearcerti</span>
                                    </div>
                                    <div class="col-lg-8">
                                        @Model.Cv.cv_contentcertificate
                                    </div>
                                </div>
                                <br />
                            </div>
                            <div style="padding: 30px">
                                <h4 style="border-bottom: 1px solid #172b4d" class="mt-3">Giải thưởng</h4>
                                <div class="row mt-3">
                                    <div class="col-lg-4">
                                        <span class="text-danger">@Model.Cv.cv_yearre</span>
                                    </div>
                                    <div class="col-lg-8">
                                        @Model.Cv.cv_contentreward
                                    </div>
                                </div>
                                <br />
                            </div>
                            <div style="padding: 30px">
                                <h4 style="border-bottom: 1px solid #172b4d" class="mt-3">Các kỹ năng</h4>
                                <div class="row mt-3">
                                    <div class="col-lg-4">
                                        <b>Tin học</b>
                                    </div>
                                    <div class="col-lg-8">
                                        @Model.Cv.cv_IT
                                    </div>
                                    <div class="col-lg-4">
                                        <b>Anh văn</b>
                                    </div>
                                    <div class="col-lg-8">
                                        @Model.Cv.cv_english
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card">
            <div class="row">
                <div class="col-lg-12" style="padding: 30px">
                    <button class="btn-l btn-7" style="width: 100%;font-size: 21px"><i class="far fa-thumbs-up">&nbsp;</i>Nhận ứng viên</button>
                    <button class="btn-l btn-13" style="width: 100%; margin-top: 1px;font-size: 21px"><i class="far fa-thumbs-down">&nbsp;</i>Từ chối ứng viên</button>
                    <hr />
                    <b class="text-danger" style="font-size: 25px">Thông tin liên hệ</b>
                    <ul>
                        <li><b><i class="fa fa-mail-bulk">&nbsp;</i>Email: </b> @Model.Cv.cv_email</li>
                        <li><b><i class="fa fa-phone">&nbsp;</i>Số điện thoại: </b> @Model.Cv.cv_phone</li>
                        <li><b><i class="fab fa-facebook-f">&nbsp;</i>Facebook: </b> <a href="@Model.Cv.cv_linkfc">Xem ngay</a></li>
                        <li>
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <button class="btn-l btn-10" style="font-size: 20px; height: 100px;margin-top: 5px; width: 100%"><i class="fas fa-comments">&nbsp;</i>Chat</button>
                                </div>
                                <div class="col-lg-6">
                                    <button onclick="window.location.href = 'tel:@Model.Cv.cv_phone'" class="btn-l btn-7" style="font-size: 20px; height: 100px;margin-top: 5px; width: 100%"><i class="fas fa-phone-volume">&nbsp;</i>Gọi</button>
                                </div>
                                <div class="col-lg-6">
                                    <button onclick="window.location.href = 'mailto:@Model.Cv.cv_email'" class="btn-l btn-7" style="font-size: 20px; height: 100px;margin-top: 5px; width: 100%"><i class="fas fa-mail-bulk">&nbsp;</i>Gửi mail</button>
                                </div>
                                <div class="col-lg-6">
                                    <button onclick="window.location.href = '@Model.Cv.cv_linkfc'"  class="btn-l btn-7" style="font-size: 20px; height: 100px;margin-top: 5px; width: 100%"><i class="fab fa-facebook-messenger">&nbsp;</i>Mes</button>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="row">
                <div class="col-lg-12" style="padding: 30px">
                    <b class="text-danger" style="font-size: 25px">Ứng viên gợi ý</b>
                    @{ 
                        List<Cv> cvs = db.Cvs.Where(n => n.career_id == employer.career_id && n.cv_id != Model.Cv.cv_id).OrderByDescending(n=>n.cv_datecreated).ToList();
                    }
                    <div class="row">
                        @foreach (var item in cvs)
                        {
                            <div class="col-lg-12" style="margin-top: 1%">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <img src="~/Images/User/32644928_2062295167425734_7686714948314988544_o.jpg" style="width: 100%; height: 100px"/>
                                    </div>
                                    <div class="col-lg-6">
                                        <ul>
                                            <li>
                                                <i class="fa fa-user">&nbsp;</i>@item.cv_fullname
                                            </li>
                                            <li>
                                                @item.cv_location
                                            </li>
                                            <li>
                                                @item.cv_schools
                                            </li>
                                            <li>
                                                <a href="#">Xem hồ sơ</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@using WebsiteWork.Models;
@model List<Cv>
@{
    ViewBag.Title = "ViewCV";
    Layout = "~/Views/Shared/_Layout.cshtml";
    User user = (User)Session["user"];
}
<link href="~/Content/UI/UIImages/css/pe-icon-7-stroke.css" rel="stylesheet" />
<link href="~/Content/UI/UIImages/css/rotating-card.css" rel="stylesheet" />
<div class="w3l-index-block1">
    <div class="content py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
                        <div class="container">
                            <a class="navbar-brand" href="javascript:;">Chào: @user.user_nicename đã quay trở lại AllWork1s</a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-inner-primary" aria-controls="nav-inner-primary" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="nav-inner-primary">
                                <div class="navbar-collapse-header">
                                    <div class="row">
                                        <div class="col-6 collapse-brand">
                                            <a href="./index.html">
                                                <img src="~/Content/UI/assets/img/brand/blue.png">
                                            </a>
                                        </div>
                                        <div class="col-6 collapse-close">
                                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#nav-inner-primary" aria-controls="nav-inner-primary" aria-expanded="false" aria-label="Toggle navigation">
                                                <span></span>
                                                <span></span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <ul class="navbar-nav ml-lg-auto">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="javascript:;">
                                            Hồ sơ đã tạo
                                            <span class="sr-only">(current)</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="javascript:;">Tất cả hồ sơ</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="javascript:;" id="nav-inner-primary_dropdown_1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sắp xếp</a>
                                        <div class="dropdown-menu" aria-labelledby="nav-inner-primary_dropdown_1">
                                            <a class="dropdown-item" href="javascript:;">Action</a>
                                            <a class="dropdown-item" href="javascript:;">Another action</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="javascript:;">Something else here</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Tabs with icons -->
                            <div class="nav-wrapper alert alert-primary text-dark mt-2">
                                Bạn đã tạo @Model.Where(n => n.cv_numbertheme == 1 && n.user_id == user.user_id).ToList().Count hồ sơ xin việc và không được tạo thêm
                            </div>
                            <div class="card shadow">
                                <div class="card-body">
                                    <div class="row">
                                        <!--Hồ sơ 1 : cơ bản-->
                                        @foreach (var item in Model.Where(n => n.cv_numbertheme == 1 && n.user_id == user.user_id).ToList())
                                        {
                                            <div class="col-md-4 col-sm-6">
                                                <div class="card-container">
                                                    <div class="card">
                                                        <div class="front">
                                                            <img class="img-circle w-100" style="height: 300px" src="~/Content/UI/UIImages/images/mau-cv-default.jpg" />
                                                            <div class="content">
                                                                <div class="footer bg-primary text-white">
                                                                    <div style="height: 30px">
                                                                        Miển phí (<i class="fa fa-plus"></i>)
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div> <!-- end front panel -->
                                                        <div class="back">
                                                            <div class="header">
                                                                <h5 class="motto">"Mẫu CV trắng, dễ sử dụng"</h5>
                                                            </div>
                                                            <div class="content">
                                                                <div class="main">
                                                                    <h4 class="text-center">Mẫu CV cơ bản</h4>
                                                                    <p class="text-center">Phù hợp với tất cả nghành nghề</p>

                                                                    <div class="stats-container">
                                                                        <div class="stats">
                                                                            <h4>0</h4>
                                                                            <p>
                                                                                Người dùng
                                                                            </p>
                                                                        </div>
                                                                        <div class="stats">
                                                                            <h4>0</h4>
                                                                            <p>
                                                                                0 kiểm duyệt
                                                                            </p>
                                                                        </div>
                                                                        <div class="stats">
                                                                            <h4>35</h4>
                                                                            <p>
                                                                                Hướng dẫn
                                                                            </p>
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                            <div class="footer">
                                                                <div class="social-links text-center btn btn-danger">
                                                                    <a class="text-white" href="@Url.Action("EditcVOne","CVUser",new { id=item.cv_id })">SỬA</a>
                                                                </div>
                                                            </div>
                                                        </div> <!-- end back panel -->
                                                    </div> <!-- end card -->
                                                </div> <!-- end card-container -->
                                            </div> <!-- end col sm 3 -->
                                        }
                                        @if (Model.Where(n => n.cv_numbertheme == 1 && n.user_id == user.user_id).ToList().Count < 1)
                                        {
                                            <div class="col-md-4 col-sm-6">
                                                <div class="card-container">
                                                    <div class="card">
                                                        <div class="front">
                                                            <img class="img-circle w-100" style="height: 300px" src="~/Content/UI/UIImages/images/mau-cv-default.jpg" />
                                                            <div class="content">
                                                                <div class="footer bg-primary text-white">
                                                                    <div style="height: 30px">
                                                                        Miển phí (<i class="fa fa-plus"></i>)
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div> <!-- end front panel -->
                                                        <div class="back">
                                                            <div class="header">
                                                                <h5 class="motto">"Mẫu CV trắng, dễ sử dụng"</h5>
                                                            </div>
                                                            <div class="content">
                                                                <div class="main">
                                                                    <h4 class="text-center">Mẫu CV cơ bản</h4>
                                                                    <p class="text-center">Phù hợp với tất cả nghành nghề</p>

                                                                    <div class="stats-container">
                                                                        <div class="stats">
                                                                            <h4>0</h4>
                                                                            <p>
                                                                                Người dùng
                                                                            </p>
                                                                        </div>
                                                                        <div class="stats">
                                                                            <h4>0</h4>
                                                                            <p>
                                                                                0 kiểm duyệt
                                                                            </p>
                                                                        </div>
                                                                        <div class="stats">
                                                                            <h4>35</h4>
                                                                            <p>
                                                                                Hướng dẫn
                                                                            </p>
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                            <div class="footer">
                                                                <div class="social-links text-center btn btn-danger">
                                                                    <a class="text-white" href="@Url.Action("Cvone","CVUser")">THÊM</a>
                                                                </div>
                                                            </div>
                                                        </div> <!-- end back panel -->
                                                    </div> <!-- end card -->
                                                </div> <!-- end card-container -->
                                            </div> <!-- end col sm 3 -->
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <!-- Tabs with icons -->
                            <div class="nav-wrapper">
                                <ul class="nav nav-pills nav-fill flex-column flex-md-row" id="tabs-icons-text" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link mb-sm-3 mb-md-0 active" id="tabs-icons-text-1-tab" data-toggle="tab" href="#tabs-icons-text-1" role="tab" aria-controls="tabs-icons-text-1" aria-selected="true"><i class="fa fa-magic mr-2"></i>Tổng quan</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link mb-sm-3 mb-md-0" id="tabs-icons-text-2-tab" data-toggle="tab" href="#tabs-icons-text-2" role="tab" aria-controls="tabs-icons-text-2" aria-selected="false"><i class="ni ni-bell-55 mr-2"></i>Phiên bản nâng cấp</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="card shadow" ng-app="">
                                <div class="card-body">
                                    <div class="tab-content" id="myTabContent">
                                        <div class="tab-pane fade show active" id="tabs-icons-text-1" role="tabpanel" aria-labelledby="tabs-icons-text-1-tab">
                                            <div class="row">
                                                <div class="col-md-5 col-sm-6">
                                                    @if (user.user_image == null)
                                                    {
                                                        <img src="~/Images/User/822711_user_512x512.png" style="width: 100px; height: 100px" class="img-fluid rounded-circle shadow" />
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/User/@user.user_image" style="width: 100px; height: 100px" class="img-fluid rounded-circle shadow" />
                                                        <div class="clearfix"></div>
                                                        <a href="#" style="font-size: 10px;">Cập nhật ảnh đại diện</a>
                                                    }
                                                </div>
                                                <div class="col-md-7 col-sm-6" ng-init="ten = '@user.user_nicename'">
                                                    Chào bạn: <b class="font-weight-bold">{{ten | uppercase}}</b>
                                                    <ul>
                                                        <li class="text-danger font-weight-bold">Tài khoản miễn phí</li>
                                                        <li class="text-danger font-weight-bold"><a href="#" class="btn btn-danger">Nâng cấp tài khoản</a></li>
                                                    </ul>
                                                </div>
                                                <div class="col-md-12 col-sm-6">
                                                    <div class="clearfix"></div>
                                                    <label class="custom-toggle">
                                                        <input type="checkbox" checked>
                                                        <span class="custom-toggle-slider rounded-circle"></span>
                                                    </label>
                                                    <h5 class="float-right text-danger">Trạng thái tìm việc đã bật</h5>
                                                    <p>Nếu bật trạng thái tìm việc, hồ sơ bạn sẽ được hiển thị ở các nhà tuyển dụng theo yêu cầu.</p>
                                                    <div class="clearfix mt-3"></div>
                                                    <label class="custom-toggle">
                                                        <input type="checkbox" checked>
                                                        <span class="custom-toggle-slider rounded-circle"></span>
                                                    </label>
                                                    <h5 class="float-right text-danger">NTD được phép liên hệ</h5>
                                                    <div class="custom-control custom-checkbox mb-3">
                                                        <input class="custom-control-input" id="customCheck1" type="checkbox">
                                                        <label class="custom-control-label" for="customCheck1">
                                                            <span>Thông qua AllWorl1s</span>
                                                        </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                        <input class="custom-control-input" id="customCheck1" type="checkbox">
                                                        <label class="custom-control-label" for="customCheck1">
                                                            <span>Thông tin cá nhân</span>
                                                        </label>
                                                    </div>
                                                    <p>Nhà tuyển dụng có thể chọn hình thức liên hệ cho bạn, chọn phù hợp để được ứng tuyển nhanh chóng.</p>
                                                </div>
                                                <div class="col-md-12 col-sm-6">
                                                    <hr />
                                                    <ul>
                                                        <li>Các việc làm theo kỹ năng của bạn</li>
                                                        @for (int i = 0; i < 5; i++)
                                                        {
                                                            <div class="row no-gutters">
                                                                <div class="col-md-4">
                                                                    <img src="~/Images/Employer/cong-ty-co-phan-vien-thong-fpt-5d5f5980e317c.jpg" class=" mt-3" alt="..." style="width: 100%; height: 80px">
                                                                </div>
                                                                <div class="col-md-8">
                                                                    <div class="card-body">
                                                                        <b>Trưởng Phòng Kinh Doanh - Hà Nội</b>
                                                                        <br />
                                                                        <p style="font-size: 12px">Công ty Cổ phần viễn thông FPT</p>
                                                                        <div style="font-size: 13px">
                                                                            <div class="float-left"><i class="fa fa-dollar text-danger font-weight-bold">&nbsp;</i>10-20 triệu</div>
                                                                            <div class="float-right"><i class="fa fa-map-marker-alt text-primary font-weight-bold">&nbsp;</i>Bình Dương</div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="tabs-icons-text-2" role="tabpanel" aria-labelledby="tabs-icons-text-2-tab">
                                            <div class="list-style mt-50">
                                                <h4 class="list-title">Mua ngay phiên bản nâng cấp cho ứng viên</h4>
                                                <div class="list-style-five">
                                                    <ul>
                                                        <li><i class="lni-check-mark-circle"></i>  Sử dụng tất cả hồ sơ cao cấp.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Quản lý, lưu trữ được 10 hồ sơ.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Ẩn bản quyền AllWork1s.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Ưu tiên hồ sơ đứng trước.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Hồ sơ được đưa đến trình ưu tiên NTD.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Hỗ trợ nhanh chóng.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Tải PDF không giới hạn.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Được học khóa làm cv xin việc.</li>
                                                        <li><a href="#" class="btn btn-primary w-100"> 200.000 vnđ/ 12 tháng</a></li>
                                                    </ul>
                                                </div>
                                                <h4 class="list-title mt-1">Phiên bản hiện tại (Miễn phí)</h4>
                                                <div class="list-style-five">
                                                    <ul>
                                                        <li><i class="lni-check-mark-circle"></i>  Sử dụng tất cả hồ sơ miễn phí.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Quản lý, lưu trữ được 3 hồ sơ.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Không xóa bản quyền AllWork1s.</li>
                                                        <li><i class="lni-check-mark-circle"></i>  Tải PDF 5 lần 1 ngày.</li>
                                                    </ul>
                                                </div>
                                            </div> <!-- list-style-four -->
                                            <div class="col-md-12 col-sm-6">
                                                <hr />
                                                <ul>
                                                    <li>Các việc làm theo kỹ năng của bạn</li>
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        <div class="row no-gutters">
                                                            <div class="col-md-4">
                                                                <img src="~/Images/Employer/cong-ty-co-phan-vien-thong-fpt-5d5f5980e317c.jpg" class=" mt-3" alt="..." style="width: 100%; height: 80px">
                                                            </div>
                                                            <div class="col-md-8">
                                                                <div class="card-body">
                                                                    <b>Trưởng Phòng Kinh Doanh - Hà Nội</b>
                                                                    <br />
                                                                    <p style="font-size: 12px">Công ty Cổ phần viễn thông FPT</p>
                                                                    <div style="font-size: 13px">
                                                                        <div class="float-left"><i class="fa fa-dollar text-danger font-weight-bold">&nbsp;</i>10-20 triệu</div>
                                                                        <div class="float-right"><i class="fa fa-map-marker-alt text-primary font-weight-bold">&nbsp;</i>Bình Dương</div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using WebsiteWork.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
    Employer employer = (Employer)Session["employer"];
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="header">
                    <h4 class="title">Chức năng của phiên bản
                    @if(employer != null)
                    {
                        if(employer.employer_version == 1)
                        {
                            <span>miễn phí</span>
                        }
                        else if(employer.employer_version == 2)
                        {
                            <span>cơ bản</span>
                        }
                        else if(employer.employer_version == 3)
                        {
                            <span>chuyên nghiệp</span>
                        }
                    }
                    </h4>
                </div>
                <div class="content">
                    @if (employer != null)
                    {
                        if (employer.employer_version == 1)
                        {
                            <ul>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Đăng tối đa 5 bài tuyển.</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Nhận tối đa 10 hồ sơ.</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Công cụ chat load trang.</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Tạo thông báo trên trang cá nhân.</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Nhận gợi ý ứng viên tốt nhất (5 hồ sơ ngẫu nhiên).</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Trình tìm kiếm thông minh (5 sự lựa chọn).</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Nhận ứng viên miễn phí.</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Thời gian tồn tại bài viết (24h).</li>
                                <li><i class="fas fa-check-circle" style="color: green">&nbsp;</i>Tải hồ sơ ứng viên (10 lần 1 ngày).</li>
                                <hr />
                                <li><a href="" class="btn btn-danger" style="width: 100%">Xem tất cả tính năng của phiên bản cao cấp</a></li>
                                <li style="margin-top: 10px">
                                    <img src="~/Content/Layout/images/video.jpg" style="width: 100%; height: 170px"/>
                                </li>
                            </ul>
                        }
                        else if (employer.employer_version == 2)
                        {
                            <ul>

                            </ul>
                        }
                        else if (employer.employer_version == 3)
                        {

                        }
                        else
                        {
                            <ul>

                            </ul>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Công cụ chức năng</h4>
                </div>
                <div class="content">
                    <div class="row" style="font-size: 12px">
                        @if (employer != null)
                        {
                            if (employer.employer_personalpage == true)
                            {

                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-7" style="height: 100px; margin-top: 5px; width: 100%"><i class="fas fa-building">&nbsp;</i>Trang cá nhân</button>
                                </div>
                                <div class="col-md-4">
                                    <a href="@Url.Action("CreateWork","Employer")">
                                        <button type="button" class=" btn-l btn-7" style="height: 100px; margin-top: 5px; width: 100%"><i class="fas fa-pager">&nbsp;</i>Đăng bài tuyển</button>
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-7" style="height: 100px; margin-top: 5px;width: 100%"><i class="fa fa-user"></i>&nbsp;Hồ sơ ứng viên</button>
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-7" style="height: 100px; margin-top: 5px;width: 100%"><i class="fas fa-ad">&nbsp;</i>Quảng cáo</button>
                                </div>
                                <div class="col-md-4">
                                    <a href="@Url.Action("Manager","Employer")">
                                        <button type="button" class=" btn-l btn-7" style="height: 100px; margin-top: 5px;width: 100%"><i class="fab fa-accusoft">&nbsp;</i>Quản lý</button>
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-7" style="height: 100px; margin-top: 5px;width: 100%"><i class="fas fa-cog">&nbsp;</i>Cài đặt</button>
                                </div>
                            }
                            else
                            {

                                <div class="col-md-12">
                                    <div class="alert alert-danger"><i class="fa fa-bell"></i>Vui lòng tạo trang cá nhân để dăng việc làm và tìm kiếm hồ sơ.</div>
                                </div>
                                <div class="col-md-4">
                                    <a href="@Url.Action("CreatePage","Employer", new {id = employer.employer_id })"><button class=" btn-l btn-7" style="height: 100px; margin-top: 5px; width: 100%"><i class="fas fa-building">&nbsp;</i>Trang cá nhân</button></a>
                                    
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-13" style="height: 100px; margin-top: 5px; width: 100%"><i class="fas fa-pager">&nbsp;</i>Đăng bài tuyển</button>
                                </div>
                                <div class="col-md-4">
                                    <a href=""><button type="button" class=" btn-l btn-13" style="height: 100px; margin-top: 5px;width: 100%"><i class="fa fa-user"></i>&nbsp;Hồ sơ ứng viên</button></a>
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-13" style="height: 100px; margin-top: 5px;width: 100%"><i class="fas fa-ad">&nbsp;</i>Quảng cáo</button>
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-13" style="height: 100px; margin-top: 5px;width: 100%"><i class="fab fa-accusoft">&nbsp;</i>Quản lý</button>
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class=" btn-l btn-13" style="height: 100px; margin-top: 5px;width: 100%"><i class="fas fa-cog">&nbsp;</i>Cài đặt</button>
                                </div>
                            }
                        }

                        <div class="col-md-12">
                            <hr />
                            <button type="button" class=" btn-l btn-11" style=" margin-top: 5px;width: 100%"><i class="fa fa-search"></i>&nbsp;&nbsp;Tìm kiếm hồ sơ</button>
                        </div>
                        <div class="col-md-2">
                            Hiển thị trang cá nhân
                            <a href="#" style="font-size: 12px; color: blue">Cài đặt</a>
                        </div>
                        <div class="col-md-2">
                            <div class="switch tog-2">
                                <input type="checkbox" checked="">
                                <label><i></i></label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            Bật quảng cáo
                            <a href="#" style="font-size: 12px; color: blue">Cài đặt</a>
                        </div>
                        <div class="col-md-2">
                            <div class="switch tog-2">
                                <input type="checkbox" checked="">
                                <label><i></i></label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            Bật thông báo
                            <a href="#" style="font-size: 12px; color: blue">Cài đặt</a>
                        </div>
                        <div class="col-md-2">
                            <div class="switch tog-2">
                                <input type="checkbox" checked="">
                                <label><i></i></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card ">
                <div class="header">
                    <h4 class="title">2014 Sales</h4>
                    <p class="category">All products including Taxes</p>
                </div>
                <div class="content">
                    <div id="chartActivity" class="ct-chart"></div>

                    <div class="footer">
                        <div class="legend">
                            <i class="fa fa-circle text-info"></i> Tesla Model S
                            <i class="fa fa-circle text-danger"></i> BMW 5 Series
                        </div>
                        <hr>
                        <div class="stats">
                            <i class="fa fa-check"></i> Data information certified
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">

                <div class="header">
                    <h4 class="title">Thôn</h4>
                    <p class="category">Last Campaign Performance</p>
                </div>
                <div class="content">
                    <div id="chartPreferences" class="ct-chart ct-perfect-fourth"></div>

                    <div class="footer">
                        <div class="legend">
                            <i class="fa fa-circle text-info"></i> Open
                            <i class="fa fa-circle text-danger"></i> Bounce
                            <i class="fa fa-circle text-warning"></i> Unsubscribe
                        </div>
                        <hr>
                        <div class="stats">
                            <i class="fa fa-clock-o"></i> Campaign sent 2 days ago
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

